@namespace easy_blazor_bulma
@inherits ComponentBase

@if (Current != null)
{
    <progress class="@MainCssClass" max="@Max" value="@Current" @attributes='AdditionalAttributes.GetFilteredAttributes(Filter)'>@Current</progress>
}
else
{
    <progress class="@MainCssClass" max="@Max" @attributes='AdditionalAttributes.GetFilteredAttributes(Filter)'>@Max</progress>
}
