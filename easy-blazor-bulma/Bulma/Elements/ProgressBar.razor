@namespace easy_blazor_bulma
@inherits ComponentBase

@if (Current != null)
{
    <progress class="@FullCssClass" max="@Max" value="@Current" @attributes='AdditionalAttributes?.Where(x => x.Key != "class")'>@Current</progress>
}
else
{
    <progress class="@FullCssClass" max="@Max" @attributes='AdditionalAttributes?.Where(x => x.Key != "class")'>@Max</progress>
}
