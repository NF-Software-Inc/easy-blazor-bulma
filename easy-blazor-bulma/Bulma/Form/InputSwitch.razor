@namespace easy_blazor_bulma
@typeparam TValue
@inherits InputBase<TValue>

<div class="@DivCssClass">
    <input type="checkbox" class="@MainCssClass" id="@Id" @bind='CurrentValue' @attributes='AdditionalAttributes.GetFilteredAttributes(Filter)' />
    @if (string.IsNullOrWhiteSpace(Label) == false)
    {
        <label class="@LabelCssClass" for="@Id">
            <span class="@TooltipCssClass" data-tooltip="@Tooltip">@Label</span>
        </label>
    }
</div>
