@page "/booleanIcon"
@inherits ComponentBase

<TitleBlock Title="Boolean Icon Test" />

<div class="container">
	<Panel class="m-3" Title="Icon Tests" Color="BulmaColors.Turquoise">
		<div class="block">
			<BooleanIcon Value=true /> True
		</div>
		<div class="block">
			<BooleanIcon Value=false /> False
		</div>
		<div class="block">
			<BooleanIcon Value=true TrueIcon="check_box" /> True Box Icon
		</div>
		<div class="block">
			<BooleanIcon Value=false FalseIcon="delete_forever" /> False Trash Icon
		</div>
		<div class="block">
			<BooleanIcon Value=true TrueColor="BulmaColors.Blue" /> Blue True
		</div>
		<div class="block">
			<BooleanIcon Value=false FalseColor="BulmaColors.Yellow"/> Yellow False
		</div>
	</Panel>
</div>
